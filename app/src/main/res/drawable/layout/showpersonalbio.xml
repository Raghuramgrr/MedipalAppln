<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textDirection="firstStrongRtl"
        tools:context="iss.nus.edu.medipalappln.fragment.showpersonal"
        >

        <LinearLayout

            android:id="@+id/Ly1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="367dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/MarqueeText2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Your Details... Your Details... Your Details... " />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearlayout1"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/personName"
                        android:textSize="20dp"
                        android:hint="Name"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:layout_weight="11.19" />

                    <EditText
                        android:id="@+id/personblood"
                        android:layout_width="0dp"
                        android:hint="Blood"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_weight="8.68"
                        android:gravity="center"
                        android:visibility="visible" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/personweight"
                        android:textSize="20dp"
                        android:hint="weight"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:layout_weight="11.19" />

                    <EditText
                        android:id="@+id/personheight"
                        android:layout_width="0dp"
                        android:hint="height"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_weight="8.68"
                        android:gravity="center"
                        android:visibility="visible" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/personphone"
                        android:textSize="20dp"
                        android:hint="phone"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:layout_weight="11.19" />

                    <EditText
                        android:id="@+id/personnric"
                        android:layout_width="0dp"
                        android:hint="nric"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_weight="8.68"
                        android:gravity="center"
                        android:visibility="visible"/>

                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/personpostalcode"
                        android:textSize="20dp"
                        android:hint="postalcode"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:layout_weight="11.19" />

                    <EditText
                        android:id="@+id/personaddress"
                        android:layout_width="0dp"
                        android:hint="address"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_weight="8.68"
                        android:gravity="center"
                        android:visibility="visible"/>




                </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="111dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>


                <Button
                    android:id="@+id/personaledit"

                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn"
                    android:elevation="0dp"
                    android:text="EDIT"
                    android:textAlignment="center" />

            </LinearLayout>





    </ScrollView>

</LinearLayout>
