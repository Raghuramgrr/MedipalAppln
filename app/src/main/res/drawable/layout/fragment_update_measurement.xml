<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iss.nus.edu.medipalappln.fragment.UpdateMeasurementFragment">

    <EditText
        android:id="@+id/text_view_measured_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/text_measured_on"
        android:inputType="datetime" />

    <Button
        android:id="@+id/btn_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_toLeftOf="@+id/text_view_measured_on"
        android:background="@drawable/ic_edit" />

    <CheckBox
        android:id="@+id/chkbox_option_bp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_blood_pressure"
        android:layout_below="@+id/text_view_measured_on" />

    <CheckBox
        android:id="@+id/chkbox_option_pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_pulse"
        android:layout_below="@+id/chkbox_option_bp"/>

    <CheckBox
        android:id="@+id/chkbox_option_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_temperature"
        android:layout_below="@+id/chkbox_option_pulse"/>

    <CheckBox
        android:id="@+id/chkbox_option_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_weight"
        android:layout_below="@+id/chkbox_option_temp"/>

    <EditText
        android:id="@+id/edit_text_systolic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/text_systolic"
        android:layout_below="@+id/chkbox_option_weight"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/edit_text_diastolic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/text_diastolic"
        android:layout_below="@+id/edit_text_systolic"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_text_pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/text_pulse"
        android:layout_below="@+id/edit_text_diastolic"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_text_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/text_weight"
        android:layout_below="@+id/edit_text_pulse"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/text_temperature"
        android:layout_below="@+id/edit_text_weight"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/chkbox_option_bp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_add" />

</RelativeLayout>
