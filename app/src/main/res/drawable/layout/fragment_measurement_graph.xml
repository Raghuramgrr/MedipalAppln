<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="iss.nus.edu.medipalappln.fragment.MainMeasurementFragment"
    android:scrollbars="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_bp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_blood_pressure"/>

            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/graph_bp" />

            <TextView
                android:id="@+id/text_view_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_pulse" />

            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/graph_pulse" />

            <TextView
                android:id="@+id/text_view_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_temperature" />

            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/graph_temperature" />

            <TextView
                android:id="@+id/text_view_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_weight" />

            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/graph_weight" />

            <Button
                android:id="@+id/btn_show_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show all"
                android:gravity="left|center_vertical" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
