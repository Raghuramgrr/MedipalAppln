<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="iss.nus.edu.medipalappln.fragment.IceDetails"

    >

    <LinearLayout

        android:id="@+id/Ly1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/MarqueeText2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Add Emergency Details....Add Emergency Details....Add Emergency Details....Add Emergency Details...." />


            <EditText
                android:id="@+id/contactName"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="#f3f3f3"
                android:hint="Contact Name"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/contactRelation"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.13"
                android:background="#f3f3f3"
                android:hint="Relationship"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/contactPhone"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="#f3f3f3"
                android:hint="Phonenumber"
                android:inputType="phone"
                android:paddingLeft="5dp" />


        </LinearLayout>

        <Button
            android:id="@+id/submitphone"

            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn"
            android:elevation="0dp"
            android:text="SUBMIT"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"

            android:layout_alignParentTop="true"
            android:backgroundTint="@android:color/holo_blue_light"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="111dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.93"

            android:orientation="vertical">


        </LinearLayout>


    </LinearLayout>



</ScrollView>